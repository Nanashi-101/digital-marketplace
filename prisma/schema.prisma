generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String    @id @unique
  email               String    @unique
  firstName           String
  lastName            String
  profileImage        String
  connectedAccountId  String    @unique
  stripeConnectLinked Boolean   @default(false)
  Products            Product[]
}

model Product {
  id               String        @id @default(uuid())
  name             String
  smallDescription String
  description      Json
  price            Float
  currency         String
  images           String[]
  category         categoryTypes
  productFile      String
  createdAt        DateTime      @default(now())
  userId           String
  User             User          @relation(fields: [userId], references: [id])
}

enum categoryTypes {
  templates
  Uikits
  icons
}
